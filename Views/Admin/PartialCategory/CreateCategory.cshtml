<div class="modal fade" id="modalCategoryCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header " style="background-color: #818896; color: white;">
         
        <h5 class="modal-title" id="exampleModalLabel" style="font-weight: bold; ">Create Category</h5>
      
        <button type="button" id="modalCategoryCreateClose" class="btn-close btn-light" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>
      <div class="modal-body CategoryCreate d-flex justify-content-center">
        <div>



          <form id="createCategoryForm">
            <div class="form-group">
              <label name="" class="control-label" style="font-weight: bold; font-size: 20px; color: #000000; ">Category Name</label>
              <input type="text" name="CategoryName" id="inputCategoryName" placeholder="Enter category name"
                class="form-control" required />
            </div>
          </form>


        </div>
      </div>
      <div class="modal-footer">
        @* <div class="modal-body d-flex justify-content-center"> *@
          <button type="button" class="btn btn-success" id="createCategory">Confirm</button>
        @* </div> *@
      </div>



    </div>
  </div>
</div>

