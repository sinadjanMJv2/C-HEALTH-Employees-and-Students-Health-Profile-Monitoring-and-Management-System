<div class="modal fade" id="modalEmployeeUpdate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
     
          <h5 class="modal-title" id="exampleModalLabel" style="font-weight: bold;">Update Employee</h5>
       
        <button type="button" id="modalEmployeeUpdateClose" class="btn-close btn-light" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>
      <div class="modal-body EmployeeUpdate d-flex justify-content-center">
        <div>
          <div>

            <form id="updateEmployeeForm">
              <div class="row">
                            <div class="address">Name</div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label name="" class="control-label">First Name</label>
                                    <input type="text" name="Firstname" id="inputMedicineName"
                                        placeholder="Enter First Name" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label name="" class="control-label">Last Name</label>
                                    <input type="text" name="Lastname" id="inputMedicineName"
                                        placeholder="Enter Last Name" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label name="" class="control-label">Middle Name</label>
                                    <input type="text" name="Middlename" id="inputMedicineName"
                                        placeholder="Enter Middle Name" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label name="" class="control-label">Birthdate</label>
                                    <input type="date" name="Birthdate" id="inputMedicineName"
                                        placeholder="Enter Birthdate" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label name="" class="control-label">Gmail address</label>
                                    <input type="text" name="Gmailaddress" id="inputUnit"
                                        placeholder="Enter GmailAddress" class="form-control" required />
                                </div>
                            </div>
                            


                            <div class="col-sm-6">
                                <div class="form-group">
                                     <label name="" class="control-label">Select Gender</label>
                                    <select id="gender" name="Gender" class="form-select">
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                </div>
                            </div>

                             <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" name="EpiCode" id="inputUnit"
                                        placeholder="Enter GmailAddress" class="form-control" hidden/>
                                </div>
                            </div>

                            

                            <div class="address">Address</div>

                            <div class="col-sm-6">
                                <div class="autocomplete">
                                    <div class="form-group">
                                        <label name="" class="control-label">Province</label>
                                        <input type="text" name="AddressProvince" id="Province" placeholder="Enter  Province"
                                            class="form-control" required />
                                        <ul id="suggestionsProv"></ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="autocomplete">
                                    <div class="form-group">
                                        <label name="" class="control-label">Municipality</label>
                                        <input type="text" name="AddressMunicipality" id="Municipality"
                                            placeholder="Enter Municipality" class="form-control" required />
                                        <ul id="suggestionsMuni"></ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="autocomplete">
                                    <div class="form-group">
                                        <label name="" class="control-label">Barangay</label>
                                        <input type="text" name="AddressBarangay" id="Barangay" placeholder="Enter Barangay"
                                            class="form-control" required />
                                        <ul id="suggestionsBar"></ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="autocomplete">
                                    <div class="form-group">
                                        <label name="" class="control-label">Purok</label>
                                        <input type="text" name="AddressPurok" id="Purok" placeholder="Enter Purok"
                                            class="form-control" required />
                                        <ul id="suggestionsPor"></ul>

                                    </div>
                                </div>
                            </div>

                            <div class="address">Department Course Or Year</div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                  
                                    @* <label name="" class="control-label">Select Department</label> *@
                                    <select id="DepartmentUpdate" name="DepartmentId" class="form-select">
                                         <option value="" disabled selected>Select a department</option>
                                    </select >
                                   

                                   
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                   
                                    <select id="CourseUpdate" name="CourseStrandYearId" class="form-select">
                                    
                                    </select>
                                    
                                </div>
                            </div>

                        </div>

            </form>

          </div>
        </div>
      </div>

      <div class="modal-footer">
       
          <button type="button" class="btn btn-info" id="updateEmployee">Confirm</button>
       
      </div>

    </div>
  </div>
</div>